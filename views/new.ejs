<%- include("partials/header") %>
<div class="container" style="margin-top: 10px;">
  <header class="jumbotron">
    <div class="container" style="text-align: center;">
      <h1>Write a new blog</h1>
      <p>Show the world what you've got !</p>
      <p>
        <a class="btn btn-info btn-large" href="/blogs">See all blogs</a>
      </p>
    </div>
  </header>
  <div
    style="
      padding: 6vh;
      border: 1px solid rgba(0, 0, 0, 0.2);
      width: 35%;
      position: absolute;
      background-color: #e9ecef;
      left: 33%;
    "
  >
    <form action="/blogs" method="POST" style="width: 100%;">
      <div class="form-group">
        <input
          type="text"
          placeholder="Title"
          name="newBlogTitle"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          placeholder="Thumbnail Source"
          name="newBlogThumbnailSrc"
          class="form-control"
        />
      </div>
      <div class="form-group">
        <textarea
          placeholder="Description"
          class="form-control"
          rows="4"
          name="newBlogDesc"
          required
        ></textarea>
      </div>

      <button type="submit" class="btn btn-block btn-outline-info">
        Add new blog
      </button>
    </form>
  </div>
</div>
<%- include("partials/footer") %>
