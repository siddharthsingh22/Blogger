<%- include("partials/header") %>
<div class="container" style="margin-top: 10px;">
  <header class="jumbotron">
    <div class="container" style="text-align: center;">
      <h1>Edit blog</h1>
      <p>Transform and change your blogs here !</p>
      <p>
        <a class="btn btn-info btn-large" href="/blogs">See all blogs</a>
      </p>
    </div>
  </header>
  <div
    style="
      padding: 6vh;
      border: 1px solid rgba(0, 0, 0, 0.2);
      width: 35%;
      position: absolute;
      background-color: #e9ecef;
      left: 33%;
    "
  >
    <form
      action="/blogs/<%= returnedBlog._id %>?_method=PUT"
      method="POST"
      style="width: 100%;"
    >
      <div class="form-group">
        <input
          type="text"
          value="<%= returnedBlog.title %>"
          name="newBlogTitle"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          value="<%= returnedBlog.src %>"
          name="newBlogThumbnailSrc"
          class="form-control"
        />
      </div>
      <div class="form-group">
        <textarea class="form-control" rows="4" name="newBlogDesc" required>
<%= returnedBlog.desc %>
    </textarea
        >
      </div>

      <button type="submit" class="btn btn-block btn-outline-info">
        Edit blog
      </button>
      <a href="/blogs" class="btn btn-block btn-outline-info">Cancel Editing</a>
    </form>
  </div>
</div>
<%- include("partials/footer") %>
